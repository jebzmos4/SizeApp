<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moriagape.sizeapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/input"
        android:layout_marginTop="45dp"
        android:hint = "enter the size on the shoe"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:shadowRadius="@android:integer/config_shortAnimTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:textColor="#ffffff"
        android:id="@+id/convert"
        android:layout_below="@+id/input"
        android:layout_centerHorizontal="true"
        android:bottomRightRadius="20dp"
        android:bottomLeftRadius="20dp"
        android:topRightRadius="20dp"
        android:topLeftRadius="20dp"
        android:ellipsize="marquee"
        android:layout_marginTop="35dp"
        style="@style/Widget.AppCompat.Button.Colored"
        />

    <TableRow
        android:layout_width="800px"
        android:layout_height="200px"
        android:paddingLeft="50px"
        android:paddingTop="70px"
        android:layout_below="@+id/convert"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150px"
            android:background="#ef9a9a"
            android:layout_height="wrap_content"
            android:text="UK"
            android:id="@+id/uk" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150px"
            android:background="#f48fb1"
            android:layout_height="wrap_content"
            android:text="US"
            android:id="@+id/us" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150px"
            android:background="#ce93d8"
            android:layout_height="wrap_content"
            android:text="EU"
            android:id="@+id/eu" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150px"
            android:background="#ffb74d"
            android:layout_height="wrap_content"
            android:text="CM"
            android:id="@+id/cm" />
    </TableRow>

    <TableRow
        android:layout_width="800px"
        android:layout_height="200px"
        android:paddingLeft="50px"
        android:layout_below="@+id/tableRow"
        android:layout_alignRight="@+id/input"
        android:layout_alignEnd="@+id/input"
        android:id="@+id/tableRow2">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:background="#ffffff"
            android:id="@+id/uktext" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text=""
            android:textStyle="bold"
            android:id="@+id/ustext" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150px"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:id="@+id/eutext" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150px"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=""

            android:id="@+id/cmtext" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="&#169; MoriAgape"
        android:textColor="@color/colorAccent"
        android:linksClickable="true"
        android:id="@+id/textView"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
